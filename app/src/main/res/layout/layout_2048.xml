            android:background="@drawable/button_2048"
            android:layout_margin="2dp"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/boton_1_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="0"
            android:background="@drawable/button_2048"
            android:layout_margin="2dp"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/boton_2_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="0"
            android:background="@drawable/button_2048"
            android:layout_margin="2dp"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/boton_2_1"
